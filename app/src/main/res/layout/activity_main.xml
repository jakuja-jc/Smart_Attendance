<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E0DDDD"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/projectlogo1"/>
    <TextView
        android:layout_marginTop="-80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Attendance Application"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textAlignment="center"
        android:clickable="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/inputID"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input your ID"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/inputPWD"
            android:layout_below="@+id/inputID"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:inputType="textPassword"
            android:hint="Enter Password"/>
        <Button
            android:id="@+id/loginBTN"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/inputPWD"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#00BCD4"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </RelativeLayout>




</LinearLayout>